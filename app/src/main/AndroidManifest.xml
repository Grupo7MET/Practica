<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.abmcr.robot">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.MainActivity"
            android:parentActivityName=".view.MainActivity" />

        <activity android:name=".view.RemoteActivity"
            android:parentActivityName=".view.RemoteActivity" />

        <activity android:name=".view.AccelerometerActivity"
            android:parentActivityName=".view.AccelerometerActivity" />

        <activity android:name=".view.LabyrinthActivity"
            android:parentActivityName=".view.LabyrinthActivity" />

        <activity android:name=".view.CommunicationActivity"
            android:parentActivityName=".view.CommunicationActivity" />

    </application>

</manifest>